<style>
  @import url("https://fonts.googleapis.com/css2?family=Orbitron&display=swap");

  body {
    background: radial-gradient(circle at top, #0f2027, #203a43, #2c5364);
  }
  .vbs-page {
    color: #f0f0f0;
    font-family: "Orbitron", sans-serif;
  }

  .vbs-page h1,
  .vbs-page h2,
  .vbs-page .font-vbs {
    letter-spacing: 2px;
  }

  .vbs-page a.bg-yellow-200 {
    background-color: #ffd700;
    transition:
      box-shadow 0.3s ease,
      transform 0.2s ease;
  }

  .vbs-page a.bg-yellow-200:hover {
    box-shadow:
      0 0 20px #ffd700,
      0 0 40px #ffd700;
    transform: scale(1.05);
  }

  .vbs-page section.spy-card {
    background: rgba(0, 0, 0, 0.6);
    border: 2px dashed #00ffcc;
    padding: 1rem;
    margin: 1rem 0;
    border-radius: 10px;
  }

  @keyframes vbs-pulse {
    0% {
      transform: scale(1);
      opacity: 1;
    }
    50% {
      transform: scale(1.1);
      opacity: 0.7;
    }
    100% {
      transform: scale(1);
      opacity: 1;
    }
  }

  .vbs-page img[src*="vbs-logo"] {
    animation: vbs-pulse 2s ease-in-out 2;
  }

  .vbs-page .vbs-bullet svg {
    margin-right: 0.5rem;
    color: #00ffcc;
  }

  .vbs-page .icon-button {
    background: linear-gradient(145deg, #1f3a4c, #27465b);
    border: 1px solid #00ffcc;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
  }

  .vbs-page .icon-button:hover {
    transform: scale(1.05);
    box-shadow: 0 0 15px #00ffcc;
  }
</style>

