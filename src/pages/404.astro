---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 Page Not Found">
  <div class="min-h-screen flex flex-col items-center justify-center">
    <div class="max-w-lg mx-auto px-4">
      <div class="text-center">
        <h1 class="text-6xl font-bold text-gray-800 mb-4">404</h1>
        <p class="text-2xl text-gray-700 mb-8">Oops! Page Not Found</p>
        <p class="text-lg text-gray-600 mb-12">
          Unfortunately, the page you requested could not be located on our
          server. This may be due to a misspelled URL or the page being removed.
          We apologize for the inconvenience.
        </p>
        <a href="/" class="inline-block px-8 py-4 font-bold rounded-lg">
          Return Home
        </a>
      </div>
    </div>
  </div>
</Layout>
