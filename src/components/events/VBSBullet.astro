---
interface Props {
  question?: string;
}
const { question } = Astro.props;
---

<div class="w-full max-w-2xl rounded-lg px-1 pt-1">
  <div class="bg-gray-100 p-4 rounded-lg flex flex-wrap">
    {
      question && (
        <span class="font-semibold mb-2 font-vbs text-4xl">{question}:</span>
      )
    }
    <span class="text-gray-700 font-vbs text-3xl"><slot /></span>
  </div>
</div>
