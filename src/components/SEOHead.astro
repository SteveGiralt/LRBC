---
import { SEO } from "astro-seo";
---

<SEO
  canonical={`https://lrbc-beta.vercel.app${Astro.url.pathname}`}
  title="Lone Rock Bible Church"
  description="Lone Rock Bible Church is a non-denominational family of believers located in the heart of the beautiful Bitterroot Valley in Montana."
  openGraph={{
    basic: {
      title: "Lone Rock Bible Church",
      type: "Church",
      image: "https://lrbc-beta.vercel.app/images/lrbc-outside.jpeg",
    },
  }}
  extend={{
    // extending the default link tags
    link: [{ rel: "icon", href: "/favicon.ico" }],
    // extending the default meta tags
    meta: [
      {
        name: "twitter:image",
        content: "https://lrbc-beta.vercel.app/images/lrbc-outside.jpeg",
      },
      {
        name: "twitter:title",
        content:
          "Lone Rock Bible Church | Love God, Love Others, Impact the World",
      },
      {
        name: "twitter:description",
        content:
          "Lone Rock Bible Church is a non-denominational family of believers located in the heart of the beautiful Bitterroot Valley in Montana.",
      },
    ],
  }}
/>
