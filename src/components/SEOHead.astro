---
import { SEO } from "astro-seo";
---

<SEO
  title="Lone Rock Bible Church | Love God, Love Others, Impact the World"
  description="Lone Rock Bible Church is a non-denominational family of believers located in the heart of the beautiful Bitterroot Valley in Montana. We would love to have you worship with us. Each week, we gather to worship, pray, and study and most of all lift up the name of Jesus in our community."
  openGraph={{
    basic: {
      title: "Lone Rock Bible Church | Love God, Love Others, Impact the World",
      type: "Church",
      image: "https://lrbc-beta.vercel.app/lrbc-outside.jpeg",
    },
  }}
  extend={{
    // extending the default link tags
    link: [{ rel: "icon", href: "/favicon.ico" }],
    // extending the default meta tags
    meta: [
      {
        name: "twitter:image",
        content: "https://lrbc-beta.vercel.app/lrbc-outside.jpeg",
      },
      {
        name: "twitter:title",
        content:
          "Lone Rock Bible Church | Love God, Love Others, Impact the World",
      },
      {
        name: "twitter:description",
        content:
          "Lone Rock Bible Church is a non-denominational family of believers located in the heart of the beautiful Bitterroot Valley in Montana. We would love to have you worship with us. Each week, we gather to worship, pray, and study and most of all lift up the name of Jesus in our community.",
      },
    ],
  }}
/>
