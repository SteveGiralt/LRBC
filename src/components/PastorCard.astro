---
const { name, image, title = "" } = Astro.props;
import Image from "astro/components/Image.astro";
---

<div
  class="w-full max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 px-1 pt-1"
>
  <div class="flex flex-col items-center pb-10">
    <Image
      class="w-24 h-24 mb-3 rounded-full shadow-lg"
      src={image}
      alt={`Image of ${name}`}
    />
    <h5
      class="mb-1 text-xl font-medium text-gray-900 dark:text-white font-oswald"
    >
      {name}
    </h5>
    <span class="text-sm text-gray-500 dark:text-gray-400 font-oswald"
      >{title}</span
    >
    <div class="flex mt-4 md:mt-6">
      <slot />
    </div>
  </div>
</div>
