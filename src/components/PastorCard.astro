---
interface Props {
  name: string;
  image: ImageMetadata;
  title?: string;
  quote?: string;
  email?: string;
}
const { name, image, title = "", quote = "" } = Astro.props;
import Image from "astro/components/Image.astro";
---

<div class="w-full max-w-sm rounded-lg px-1 pt-1">
  <div class="flex flex-col items-center pb-10">
    <div class="h-30 w-30">
      <Image
        class="mb-3 rounded-full shadow-lg object-cover aspect-square"
        src={image}
        alt={`Image of ${name}`}
      />
    </div>
    <h5
      class="mb-1 text-xl font-medium text-gray-900 dark:text-white font-oswald"
    >
      {name}
    </h5>
    <span class="text-sm text-gray-500 dark:text-gray-400 font-oswald">
      {title}
    </span>
    <div class="flex mt-4 md:mt-6">
      <slot />
    </div>
    {quote && <span class="italic mt-1">{quote}</span>}
  </div>
</div>
