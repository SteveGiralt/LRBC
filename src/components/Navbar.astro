---
import { Image } from "astro:assets";
import logo from "../images/logo.png";
---

<nav
  class="flex items-center justify-between flex-wrap bg-dark-blue bg-opacity-80 p-6 fixed w-full z-10 top-0"
>
  <div class="flex items-center flex-shrink-0 text-white mx-auto">
    <a
      class="text-white no-underline hover:text-white hover:no-underline"
      href="#"
      ><div class="flex md:w-auto items-center">
        <span class="">
          <Image src={logo} alt="Lone Rock Bible Church Logo" />
        </span>
        <span class="ml-1">Lone Rock Bible Church</span>
      </div>
    </a>
  </div>

  <div class="block lg:hidden">
    <button
      id="nav-toggle"
      class="flex items-center px-4 py-3 rounded text-white"
    >
      <svg
        class="fill-current h-5 w-5"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
      >
        <title>Menu</title>
        <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path>
      </svg>
    </button>
  </div>

  <div
    class="w-full flex-grow lg:items-center lg:w-auto hidden lg:block pt-6 lg:pt-0"
    id="nav-content"
  >
    <ul class="list-reset lg:flex justify-end flex-1 items-center">
      <li class="mr-3 hover:bg-gray-400 hover:bg-opacity-50">
        <a class="inline-block py-2 px-4 text-white no-underline" href="/"
          >Home</a
        >
      </li>
      <li class="mr-3 hover:bg-gray-400 hover:bg-opacity-50">
        <a class="inline-block py-2 px-4 text-white no-underline" href="/about"
          >About</a
        >
      </li><li class="mr-3 hover:bg-gray-400 hover:bg-opacity-50">
        <a class="inline-block py-2 px-4 text-white no-underline" href="/visit"
          >Visit</a
        >
      </li><li class="mr-3 hover:bg-gray-400 hover:bg-opacity-50">
        <a
          class="inline-block py-2 px-4 text-white no-underline"
          href="/contact">Contact</a
        >
      </li>
    </ul>
  </div>
</nav>
