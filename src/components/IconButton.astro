---
interface Props {
  href: string;
  newTab?: boolean;
}
const { href, newTab = false } = Astro.props;
---

<a
  href={href}
  class="bg-lrbc-red text-white py-2 px-4 rounded inline-flex items-center hover:bg-lrbc-red-hover"
  target="_blank"
  rel={newTab ? "noopener noreferrer" : undefined}
>
  <slot name="icon" />
  <slot />
</a>
