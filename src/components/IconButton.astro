---
interface Props {
  href: string;
  newTab?: boolean;
  download?: boolean;
}
const { href, newTab = false, download } = Astro.props;
---

<a
  href={href}
  class="bg-black text-white py-2 px-4 rounded inline-flex items-center hover:shadow-[0_0_20px_#ffd700,_0_0_40px_#ffd700] hover:scale-105"
  target="_blank"
  rel={newTab ? "noopener noreferrer" : undefined}
  download={download ? "Kilamanjaro" : undefined}
>
  <slot name="icon" />
  <slot />
</a>
